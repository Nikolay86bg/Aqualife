{% extends 'layout.html.twig' %}
    {% block content_header %}
        <section class="content-header">
            <h1>
                <i class="fa fa-list" aria-hidden="true"></i> List Facilities
            </h1>
            <ol class="breadcrumb">
                <li><a href="{{ url('query_index') }}"><i class="fa fa-dashboard"></i> Facilities</a></li>
                <li class="active">List</li>
            </ol>
        </section>
    {% endblock %}

{% block content %}
     <div class="col-md-12 col-sm-6 col-xs-12">
         <div class="box box-primary">

             <div class="x_content">
                 {#{% include 'user/filter.html.twig' %}#}
                 <div class="box-body">

                     <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap table-hover" cellspacing="0">
                         <thead>
                         <tr>
                             {% set route = app.request.attributes.get('_route') %}
                             {% set params = app.request.attributes.get('_route_params')|merge(app.request.query.all) %}


                             {% if params.order is defined and params.sort == 'id' and params.order == 'DESC' %}
                                 <th><a href = "{{ url(route, params|merge({sort:'id',order:'ASC'})) }}">Id <i class="fa fa-fw fa-sort-asc"></i></a></th>
                             {% elseif params.order is defined and params.sort == 'id' and params.order == 'ASC' %}
                                 <th><a href = "{{ url(route, params|merge({sort:'id', order:'DESC'})) }}">Id <i class="fa fa-fw fa-sort-desc"></i></a></th>
                             {% else %}
                                 <th><a href = "{{ url(route, params|merge({sort:'id',order:'ASC'})) }}">Id <i class="fa fa-fw fa-sort"></i></a></th>
                             {% endif %}


                             {% if params.order is defined and params.sort == 'name' and params.order == 'DESC' %}
                                 <th><a href = "{{ url(route, params|merge({sort:'name',order:'ASC'})) }}">Name <i class="fa fa-fw fa-sort-asc"></i></a></th>
                             {% elseif params.order is defined and params.sort == 'name' and params.order == 'ASC' %}
                                 <th><a href = "{{ url(route, params|merge({sort:'name', order:'DESC'})) }}">Name <i class="fa fa-fw fa-sort-desc"></i></a></th>
                             {% else %}
                                 <th><a href = "{{ url(route, params|merge({sort:'name',order:'ASC'})) }}">Name <i class="fa fa-fw fa-sort"></i></a></th>
                             {% endif %}

                             {% if params.order is defined and params.sort == 'totalParts' and params.order == 'DESC' %}
                                 <th><a href = "{{ url(route, params|merge({sort:'totalParts',order:'ASC'})) }}">Total Parts <i class="fa fa-fw fa-sort-asc"></i></a></th>
                             {% elseif params.order is defined and params.sort == 'totalParts' and params.order == 'ASC' %}
                                 <th><a href = "{{ url(route, params|merge({sort:'totalParts', order:'DESC'})) }}">Total Parts <i class="fa fa-fw fa-sort-desc"></i></a></th>
                             {% else %}
                                 <th><a href = "{{ url(route, params|merge({sort:'totalParts',order:'ASC'})) }}">Total Parts <i class="fa fa-fw fa-sort"></i></a></th>
                             {% endif %}


                             <th>Manage</th>

                         </tr>
                         </thead>
                         <tbody>
                         {% if facilities|length > 0%}
                             {% for facility in facilities %}
                                 <tr>
                                     <td>
                                         <a href="{{ path('facility_show', { 'id': facility.id }) }}">{{ facility.id }}</a>
                                     </td>
                                     <td>{{ facility.name }}</td>
                                     <td>{{ facility.totalParts }}</td>
                                     <td class="actions">
                                         <a href="{{ path('facility_show', { 'id': facility.id }) }}" class="btn-sm bg-orange no-wrap">
                                             <i class="fa fa-user"></i><span class="hidden-xs hidden-sm"> View</span>
                                         </a>
                                     </td>
                                 </tr>
                             {% endfor %}
                         {% endif %}
                         </tbody>
                     </table>
                 </div>

                 {% include 'paginator.html.twig' with { 'paginator': facilities } only %}
             </div>
         </div>
     </div>

 {% endblock %}
