{% extends 'base.html.twig' %}

{% block body_class %}login{% endblock %}
{% block body %}

    <div class="login-box">
        <div class="login-logo">
            <a href="#"><b>Aqualife</b> Login</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Sign in to start your session</p>

            {{ form_start(form) }}
                {% if error %}
                    <div class="alert alert-danger"><strong>Error:</strong> {{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <div class="form-group has-feedback">
                    {{ form_widget(form.username, { attr: { placeholder: 'Username', class:"form-control" }, value: last_username }) }}
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    {{ form_widget(form.password, { attr: { placeholder: 'Password', class:"form-control" } }) }}
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        {#<div class="checkbox icheck">#}
                            {#<label>#}
                                {#<input type="checkbox"> Remember Me#}
                            {#</label>#}
                        {#</div>#}
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>

            {{ form_end(form) }}

        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->


{% endblock %}
