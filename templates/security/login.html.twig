{% extends 'base.html.twig' %}

{% block body_class %}login{% endblock %}
{% block body %}
    <div class="login_wrapper">
        <div class="animate form login_form">
            <section class="login_content">
                {{ form_start(form) }}
                {% if error %}
                    <div class="alert alert-danger"><strong>Error:</strong> {{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {#<h1><img id="logo-login-form" src="{{ asset('images/main-logo.svg') }}"/></h1>#}

                <h4>411 Task Manager</h4>

                <div>
                    {{ form_widget(form.username, { attr: { placeholder: 'Username' }, value: last_username }) }}
                </div>
                <div>
                    {{ form_widget(form.password, { attr: { placeholder: 'Password' } }) }}
                </div>
                <div>
                    <button type="submit" class="btn btn-default">Log in</button>
                </div>

                <div class="clearfix"></div>

                <div class="separator">

                    <div class="clearfix"></div>
                    <br/>

                    <div>
                        <p>Â©2017 All Rights Reserved.</p>
                    </div>
                </div>
                {{ form_end(form) }}
            </section>
        </div>
    </div>
{% endblock %}
