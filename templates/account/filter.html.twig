                </button>
            </div>
            <div class="col-md-2 col-sm-12 col-xs-12">
                <a class="btn btn-block btn-sm bg-orange no-wrap filter-event-table" href="{{ url(app.request.attributes.get('_route')) }}">
                    <i class="fa fa-eraser" aria-hidden="true"></i><span class="hidden-xs hidden-sm"> {{ "general.button.reset"|trans }}</span>
                </a>
            </div>
        </div>

    </div>

