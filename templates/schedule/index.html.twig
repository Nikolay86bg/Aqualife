{% extends 'layout.html.twig' %}
    {% block content_header %}
        <style>
            #calendar {
                max-width: auto;
                margin: 0 auto;
            }
            .fc-view-container {
                  width: auto;
            }
            .fc-view-container .fc-view {
                overflow-x: scroll;
            }

            .fc-agendaWeek-view > table {
                width: 5000px;
            }

            .fc-agendaMonth-view > table {
              width: 18000px;
            }
            /*.fc-axis {*/
                /*position: fixed;*/
                /*z-index: 999;*/
            /*}*/
        </style>
        <section class="content-header">
            <h1>
                <i class="fa fa-list" aria-hidden="true"></i> {{ "schedule.title.list_schedule"|trans }}
            </h1>
            <ol class="breadcrumb">
                <li><a href="{{ url('schedule_index') }}"><i class="fa fa-dashboard"></i> {{ "menu.schedule"|trans }}</a></li>
                <li class="active">{{ "menu.facilities"|trans }}</li>
            </ol>
        </section>
    {% endblock %}

{% block content %}
    <div class="col-md-12 col-sm-6 col-xs-12">
        <!-- Main content -->
        <section class="content">
            {% include 'schedule/filter.html.twig' %}
            <div class="row">
                <h2>{{ facility.name }} - <a href="{{ url('schedule_print', {'id': facility.id, 'from': date|date("d-m-Y"), 'to': date|date("d-m-Y")}) }}" target="_blank" class="btn btn-sm btn-success">{{ "general.button.for_printing"|trans }}</a></h2>

                <div class="col-md-12">
                    <div class="box box-primary">
                        <div class="box-body no-padding">
                            <!-- THE CALENDAR -->
                            <div id="calendar"></div>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /. box -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->

    </div>
    <!-- /.content-wrapper -->

{% endblock %}


  {% block javascripts %}
      {{ parent() }}

      <!-- fullCalendar -->
      <script src="{{ url('app_homepage') }}bower_components/moment/moment.js"></script>
      <script src="{{ url('app_homepage') }}bower_components/fullcalendar/dist/fullcalendar.min.js"></script>
      {#<script src='{{ url('app_homepage') }}bower_components/fullcalendar/lang-all.js'></script>#}
      <script src='{{ url('app_homepage') }}bower_components/fullcalendar/dist/locale-all.js'></script>

      <!-- fullCalendar Scheduler-->
      <script src='{{ url('app_homepage') }}bower_components/fullcalendar-scheduler/scheduler.min.js'></script>

      {#https://fullcalendar.io/docs/events-json-feed#}
      <script>

          $(function () {
              var some_date = $.fullCalendar.moment('{{ date|date("Y-m-d")}}T00:00:00');

              $('#calendar').fullCalendar({
                  defaultDate: some_date,
                  defaultView: 'agendaDay',
                  groupByDateAndResource: true,
                  header: {
                      left: 'prev,next',
                      center: 'title',
                      right: 'agendaDay,agendaWeek,agendaMonth,agendaFourDay'
                  },
                  views: {
                      agendaMonth: {
                          type: 'agenda',
                          duration: {month: 1},
                      },
                  },
                  allDaySlot: false,
                  eventRender: function (eventObj, $el) {
                      $el.popover({
                          title: eventObj.title,
                          content: eventObj.description,
                          trigger: 'hover',
                          placement: 'top',
                          container: 'body'
                      });
                  },
                  height: 'auto',
                  locale: 'ru',
                  timeFormat: 'H:mm', // uppercase H for 24-hour clock
                  columnHeaderFormat: 'D MMMM YYYY',
                  slotLabelFormat: [
                      'D MMMM YYYY', // top level of text
                      'H:mm', // uppercase H for 24-hour clock
                  ],
                  resourceLabelText: 'Коридор',
                  resourceAreaWidth: "10%",
                  slotDuration: "01:00:00",
                  resources: [
                      {% if facility.type == constant('App\\Entity\\Facility::TYPE_POOL') %}
                      {% for i in 1..8 %}
                      {
                          id: '{{ i }}',
                      },
                      {% endfor %}
                      {% else %}
                      {
                          id: 'All'
                      },
                      {
                          id: '1/2'
                      },
                      {
                          id: '1/3'
                      },
                      {% endif %}
                      {
                          id: 'Неодобрени'
                      }
                  ],
                  minTime: "07:00:00",
                  maxTime: "21:00:00",
                  displayEventTime: true,
                  displayEventEnd: true,
                  events: {
                      url: '/schedule/feed',
                      type: 'POST',
                      data: {
                          facility_id: {{ facility.id }},
                      },
                      error: function () {
                          alert('there was an error while fetching events!');
                      },
                  }
              });

          });
      </script>

      <script>
          $('.datepicker').datepicker({
//              startDate: "today",
              setDate: new Date(),
              format: 'dd-mm-yyyy',
              orientation: "bottom auto",
              autoclose: true,
              todayHighlight: true
          });
      </script>

  {% endblock %}