{% extends 'layout.html.twig' %}

    {% block content_header %}
        <section class="content-header">
            <h1>
                <i class="fa fa-plus-circle" aria-hidden="true"></i>
                {{ "user.title.edit_user"|trans }} <span> - {{ user }} </span>
            </h1>
            <ol class="breadcrumb">
                <li><a href="{{ url('user_index') }}"><i class="fa fa-dashboard"></i> {{ "user.title.user"|trans }}</a></li>
                <li class="active">{{ "general.button.edit"|trans }}</li>
            </ol>
        </section>
    {% endblock %}

    {% block content %}
        <div class="col-md-12 col-sm-6 col-xs-12">
            <div class="box box-primary">

                    {% for label, messages in app.flashes(['success', 'error']) %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label }} alert-dismissable">
                                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}

                    <div class="x_content">
                        {{ form_start(edit_form, {'role': 'form'}) }}
                        <div class="box-body">
                            {{ form_widget(edit_form) }}
                            <div class="box-footer">
                                <button id="send" type="submit" class="btn btn-primary">{{ "general.button.edit"|trans }}</button>
                            </div>
                        </div>
                        {{ form_end(edit_form) }}
                    </div>
            </div>


        </div>
    {% endblock %}
