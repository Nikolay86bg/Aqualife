    {% extends 'layout.html.twig' %}

    {% block content_header %}
    <section class="content-header">
        <h1>
            <i class="fa fa-plus-circle" aria-hidden="true"></i>
            {{ "user.title.add_user"|trans }}
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ url('user_index') }}"><i class="fa fa-dashboard"></i> {{ "user.title.user"|trans }}</a></li>
            <li class="active">{{ "general.button.add"|trans }}</li>
        </ol>
    </section>
    {% endblock %}

    {% block content %}

    <div class="col-md-12 col-sm-6 col-xs-12">
        <div class="box box-primary">

            {% for label, messages in app.flashes(['success', 'error']) %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissable">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}


                <div class="x_content">
                    {{ form_start(form) }}
                    <div class="box-body">
                        {{ form_widget(form) }}
                        <div class="box-footer">
                            <button id="send" type="submit" class="btn btn-primary">{{ "general.button.add"|trans }}</button>
                            <a href="{{ path('user_index') }}" class="btn bg-blue">{{ "general.button.cancel"|trans }}</a>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>

        </div>

    </div>
    {% endblock %}
