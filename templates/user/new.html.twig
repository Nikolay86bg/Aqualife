    {% extends 'layout.html.twig' %}

    {% block content %}
    <div class="x_panel">
        <div class="x_title">
            <h2>
                <small>
                    <i class="fa fa-plus-circle" aria-hidden="true"></i>
                    Add User
                </small>
            </h2>
            <div class="clearfix"></div>
        </div>

        <div class="col-md-7 col-sm-6 col-xs-12">
            <div class="x_content">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="form-group">
                    <button id="send" type="submit" class="btn bg-green">Submit</button>
                    <a href="{{ path('user_index') }}" class="btn bg-blue">Cancel</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    {% endblock %}
