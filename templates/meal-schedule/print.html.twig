{% extends 'layout.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="header text-center" style=" margin-top: 20px;">
            <img src="/images/Top%20Aqualife.png" class="img-responsive" style=" margin: 0 auto;"/>
        </div>
    </div>
    <div class="row">
            <h2>Restaurant {{ constant('App\\Entity\\Query::RESTAURANTS')[restaurantID] }}</h2>
            <div class="">
                <div class="box box-primary">
                    <div class="box-body no-padding">
                        <!-- THE CALENDAR -->
                        <div id="calendar">
                            <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap table-hover" cellspacing="0">
                                <thead>
                                <tr>
                                    <th>DATE / ДАТА</th>
                                    <th>BREAKFAST/ЗАВТРАК</th>
                                    <th>LUNCH / ОБЕД</th>
                                    <th>DINNER / УЖИН</th>
                                    <th>MIDDLE BREAKFAST</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% if schedule|length > 0%}
                                    {% for realSchedule in schedule %}
                                    {% for date,meals in realSchedule %}
                                        <tr>
                                            <td>
                                                {{ date }}
                                            </td>
                                            <td>
                                                {% if meals.breakfast is defined %}
                                                    {% for time,accounts in meals.breakfast  %}
                                                        {% for account in accounts %}
                                                            {{ time }} <span class="">{{ account.name }}</span><br>
                                                        {% endfor %}
                                                    {% endfor %}
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if meals.lunch is defined %}
                                                    {% for time,accounts in meals.lunch  %}
                                                        {% for account in accounts %}
                                                            {{ time }} <span class="">{{ account.name }}</span><br>
                                                        {% endfor %}
                                                    {% endfor %}
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if meals.dinner is defined %}
                                                    {% for time,accounts in meals.dinner  %}
                                                        {% for account in accounts %}
                                                            {{ time }} <span class="">{{ account.name }}</span><br>
                                                        {% endfor %}
                                                    {% endfor %}
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if meals.middleBreakfast is defined %}
                                                    {% for time,accounts in meals.middleBreakfast  %}
                                                        {% for account in accounts %}
                                                            {{ time }} <span class="">{{ account.name }}</span><br>
                                                        {% endfor %}
                                                    {% endfor %}
                                                {% endif %}
                                            </td>

                                        </tr>
                                    {% endfor %}
                                    {% endfor %}
                                {% else %}
                                    <h1>No results</h1>
                                {% endif %}
                                </tbody>
                            </table>

                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /. box -->
            </div>
            <!-- /.col -->

    </div>
</div>


{% endblock %}