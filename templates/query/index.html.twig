{% extends 'layout.html.twig' %}
    {% block content_header %}
        <section class="content-header">
            <h1>
                <i class="fa fa-list" aria-hidden="true"></i> List Queries
            </h1>
            <ol class="breadcrumb">
                <li><a href="{{ url('query_index') }}"><i class="fa fa-dashboard"></i> Queries</a></li>
                <li class="active">List</li>
            </ol>
        </section>
    {% endblock %}

{% block content %}
    <div class="col-md-12 col-sm-6 col-xs-12">

        {% for label, messages in app.flashes(['success', 'error']) %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissable">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div class="box box-primary">
            <div class="x_content">
                {% include 'query/filter.html.twig' %}
                <hr/>
                <div class="box-body">

                    <table id="datatable-responsive"
                           class="table table-striped table-bordered dt-responsive nowrap table-hover" cellspacing="0">
                        <thead>
                        <tr>
                            {% set route = app.request.attributes.get('_route') %}
                            {% set params = app.request.attributes.get('_route_params')|merge(app.request.query.all) %}



                            {% if params.order is defined and params.sort == 'id' and params.order == 'DESC' %}
                                <th><a href="{{ url(route, params|merge({sort:'id',order:'ASC'})) }}">ID <i
                                                class="fa fa-fw fa-sort-asc"></i></a></th>
                            {% elseif params.order is defined and params.sort == 'id' and params.order == 'ASC' %}
                                <th><a href="{{ url(route, params|merge({sort:'id', order:'DESC'})) }}">ID <i
                                                class="fa fa-fw fa-sort-desc"></i></a></th>
                            {% else %}
                                <th><a href="{{ url(route, params|merge({sort:'id',order:'ASC'})) }}">ID <i
                                                class="fa fa-fw fa-sort"></i></a></th>
                            {% endif %}

                            {% if params.order is defined and params.sort == 'name' and params.order == 'DESC' %}
                                <th><a href="{{ url(route, params|merge({sort:'name',order:'ASC'})) }}">Name <i
                                                class="fa fa-fw fa-sort-asc"></i></a></th>
                            {% elseif params.order is defined and params.sort == 'name' and params.order == 'ASC' %}
                                <th><a href="{{ url(route, params|merge({sort:'name', order:'DESC'})) }}">Name <i
                                                class="fa fa-fw fa-sort-desc"></i></a></th>
                            {% else %}
                                <th><a href="{{ url(route, params|merge({sort:'name',order:'ASC'})) }}">Name <i
                                                class="fa fa-fw fa-sort"></i></a></th>
                            {% endif %}

                            {% if params.order is defined and params.sort == 'sport' and params.order == 'DESC' %}
                                <th><a href="{{ url(route, params|merge({sort:'sport',order:'ASC'})) }}">Sport <i
                                                class="fa fa-fw fa-sort-asc"></i></a></th>
                            {% elseif params.order is defined and params.sort == 'sport' and params.order == 'ASC' %}
                                <th><a href="{{ url(route, params|merge({sort:'sport', order:'DESC'})) }}">Sport <i
                                                class="fa fa-fw fa-sort-desc"></i></a></th>
                            {% else %}
                                <th><a href="{{ url(route, params|merge({sort:'sport',order:'ASC'})) }}">Sport <i
                                                class="fa fa-fw fa-sort"></i></a></th>
                            {% endif %}

                            {% if params.order is defined and params.sort == 'country' and params.order == 'DESC' %}
                                <th><a href="{{ url(route, params|merge({sort:'country',order:'ASC'})) }}">Country <i
                                                class="fa fa-fw fa-sort-asc"></i></a></th>
                            {% elseif params.order is defined and params.sort == 'country' and params.order == 'ASC' %}
                                <th><a href="{{ url(route, params|merge({sort:'country', order:'DESC'})) }}">Country <i
                                                class="fa fa-fw fa-sort-desc"></i></a></th>
                            {% else %}
                                <th><a href="{{ url(route, params|merge({sort:'country',order:'ASC'})) }}">Country <i
                                                class="fa fa-fw fa-sort"></i></a></th>
                            {% endif %}

                            {% if params.order is defined and params.sort == 'arrival' and params.order == 'DESC' %}
                                <th><a href="{{ url(route, params|merge({sort:'arrival',order:'ASC'})) }}">Arrival <i
                                                class="fa fa-fw fa-sort-asc"></i></a></th>
                            {% elseif params.order is defined and params.sort == 'arrival' and params.order == 'ASC' %}
                                <th><a href="{{ url(route, params|merge({sort:'arrival', order:'DESC'})) }}">Arrival <i
                                                class="fa fa-fw fa-sort-desc"></i></a></th>
                            {% else %}
                                <th><a href="{{ url(route, params|merge({sort:'arrival',order:'ASC'})) }}">Arrival <i
                                                class="fa fa-fw fa-sort"></i></a></th>
                            {% endif %}

                            {% if params.order is defined and params.sort == 'departure' and params.order == 'DESC' %}
                                <th><a href="{{ url(route, params|merge({sort:'departure',order:'ASC'})) }}">Departure
                                        <i class="fa fa-fw fa-sort-asc"></i></a></th>
                            {% elseif params.order is defined and params.sort == 'departure' and params.order == 'ASC' %}
                                <th><a href="{{ url(route, params|merge({sort:'departure', order:'DESC'})) }}">Departure
                                        <i class="fa fa-fw fa-sort-desc"></i></a></th>
                            {% else %}
                                <th><a href="{{ url(route, params|merge({sort:'departure',order:'ASC'})) }}">Departure
                                        <i class="fa fa-fw fa-sort"></i></a></th>
                            {% endif %}

                            {% if params.order is defined and params.sort == 'status' and params.order == 'DESC' %}
                                <th><a href="{{ url(route, params|merge({sort:'status',order:'ASC'})) }}">Status <i
                                                class="fa fa-fw fa-sort-asc"></i></a></th>
                            {% elseif params.order is defined and params.sort == 'status' and params.order == 'ASC' %}
                                <th><a href="{{ url(route, params|merge({sort:'status', order:'DESC'})) }}">Status <i
                                                class="fa fa-fw fa-sort-desc"></i></a></th>
                            {% else %}
                                <th><a href="{{ url(route, params|merge({sort:'status',order:'ASC'})) }}">Status <i
                                                class="fa fa-fw fa-sort"></i></a></th>
                            {% endif %}

                            {% if params.order is defined and params.sort == 'payed' and params.order == 'DESC' %}
                                <th><a href="{{ url(route, params|merge({sort:'payed',order:'ASC'})) }}">Payed <i
                                                class="fa fa-fw fa-sort-asc"></i></a></th>
                            {% elseif params.order is defined and params.sort == 'payed' and params.order == 'ASC' %}
                                <th><a href="{{ url(route, params|merge({sort:'payed', order:'DESC'})) }}">Payed <i
                                                class="fa fa-fw fa-sort-desc"></i></a></th>
                            {% else %}
                                <th><a href="{{ url(route, params|merge({sort:'payed',order:'ASC'})) }}">Payed <i
                                                class="fa fa-fw fa-sort"></i></a></th>
                            {% endif %}


                            <th>Manage</th>

                        </tr>
                        </thead>
                        <tbody>
                        {% if queries|length > 0 %}
                            {% for query in queries %}
                                {% if query.account %}
                                    <tr>
                                        <td>{{ query.id }}</td>
                                        <td>{{ query.account.name }}</td>
                                        <td>{{ query.account.sport }}</td>
                                        <td>{{ countries[query.account.country] }}</td>
                                        <td>{{ query.dateOfArrival|date('Y-m-d H:i') }}</td>
                                        <td>{{ query.dateOfDeparture|date('Y-m-d H:i') }}</td>
                                        <td>
                                            {% if query.status == constant('App\\Entity\\Query::STATUS_ACCEPTED') %}
                                                {% set labelClass = 'label-success' %}
                                            {% elseif query.status == constant('App\\Entity\\Query::STATUS_REJECTED') %}
                                                {% set labelClass =  'label-danger' %}
                                            {% else %}
                                                {% set labelClass =  'label-warning' %}
                                            {% endif %}
                                            <span class="label {{ labelClass }}">{{ constant('App\\Entity\\Query::STATUSES')[query.status] }}</span>
                                        </td>
                                        <td>
                                            {{ constant('App\\Entity\\Query::PAYED')[query.payed] }}
                                        </td>
                                        <td class="actions btn-toolbar">
                                            <a href="{{ path('query_show', { 'id': query.id }) }}"
                                               class="btn btn-sm bg-orange no-wrap">
                                                <i class="fa fa-user"></i><span class="hidden-xs hidden-sm"> View</span>
                                            </a>

                                            {% if (is_granted(constant('App\\Security\\Voter\\QueryVoter::QUERY_EDIT_ROLE'))) %}

                                                <a href="{{ path('query_edit', { 'id': query.id }) }}"
                                                   class="btn btn-sm bg-purple no-wrap">
                                                    <i class="fa  fa-wrench"></i><span
                                                            class="hidden-xs hidden-sm"> Edit</span>
                                                </a>

                                                {% if query.status == constant('App\\Entity\\Query::STATUS_IN_PROGRESS') %}
                                                    <a href="#" class="btn btn-sm bg-success no-wrap"
                                                       data-toggle="modal"
                                                       data-target="#modal-default{{ query.id }}">
                                                        <i class="fa fa-check"></i><span
                                                                class="hidden-xs hidden-sm"> Accept</span>
                                                    </a>
                                                {% endif %}

                                            {% endif %}

                                            <a href="{{ path('query_delete', { 'id': query.id }) }}"
                                               class="btn btn-sm bg-red-active no-wrap">
                                                <i class="fa fa-close"></i><span class="hidden-xs hidden-sm"> Delete</span>
                                            </a>
                                        </td>
                                    </tr>
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                        </tbody>
                    </table>
                </div>

                {% include 'paginator.html.twig' with { 'paginator': queries } only %}
            </div>
        </div>
    </div>


    {% if queries|length > 0 %}
        {% for query in queries %}
            {% if query.status == constant('App\\Entity\\Query::STATUS_IN_PROGRESS') %}

                {% include 'query/_accept.html.twig' %}

            {% endif %}
        {% endfor %}
    {% endif %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <!-- iCheck 1.0.1 -->
    <script src="{{ url('app_homepage') }}plugins/iCheck/icheck.min.js"></script>

    <script>
        //iCheck for checkbox and radio inputs
        $('input[type="checkbox"].minimal, input[type="radio"].minimal').iCheck({
            checkboxClass: 'icheckbox_minimal-blue',
            radioClass: 'iradio_minimal-blue'
        })


        $(".minimal").on("ifChecked", function (e) {
            var checkboxes = $('[data-id="' + $(this).data('id') + '"]');
            var $this = $(this);
            var limit = $(this).data('limit');
            var disabled_count = checkboxes.filter(":disabled").length;
            var checked_count = checkboxes.filter(":checked").length;

            if ((checked_count - disabled_count) > limit) {
                alert('Max lanes reached!');
                setTimeout(function () {
                    $this.iCheck('uncheck');
                }, 1);
            }
        });

    </script>
{% endblock %}
