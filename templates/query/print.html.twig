{% extends 'layout.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="header text-center" style=" margin-top: 20px;">
            <img src="/images/Top%20Aqualife.png" class="img-responsive" style=" margin: 0 auto;"/>
        </div>
    </div>
    <div class="row">
            <h2>{{ query.account.name }} {% if query.account.country is defined %}{{ countries[query.account.country] }}{% else %} - {% endif %}</h2>
            <div class="">
                <div class="box box-primary">
                    <div class="box-body no-padding">
                            <h3>Query</h3>
                            <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap table-hover" cellspacing="0">
                                <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>NAME</th>
                                    <th>MANAGER</th>
                                    <th>SPORT</th>
                                    <th>COUNTRY</th>
                                    <th>ARRIVAL</th>
                                    <th>DEPARTURE</th>
                                </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                {% if query|length > 0%}
                                    <td>{{ query.id }}</td>
                                    <td>{% if query.account.name is defined %}{{ query.account.name }}{% else %} - {% endif %}</td>
                                    <td>{% if query.account.manager is defined %}{{ query.account.manager }}{% else %} - {% endif %}</td>
                                    <td>{% if query.account.sport is defined %}{{ query.account.sport }}{% else %} - {% endif %}</td>
                                    <td>{% if query.account.country is defined %}{{ countries[query.account.country] }}{% else %} - {% endif %}</td>
                                    <td>{% if query.dateOfArrival is defined %}{{ query.dateOfArrival|date('Y-m-d H:i') }}{% else %} - {% endif %}</td>
                                    <td>{% if query.dateOfDeparture is defined %}{{ query.dateOfDeparture|date('Y-m-d H:i') }}{% else %} - {% endif %}</span></a</td>
                                {% else %}
                                    <td><h2>No results</h2></td>
                                {% endif %}
                                    </tr>
                                </tbody>
                            </table>

                            <h3>Meals</h3>
                            <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap table-hover" cellspacing="0">
                                <thead>
                                <tr>
                                    <th>DATE</th>
                                    <th>RESTAURANT</th>
                                    <th>BREAKFAST</th>
                                    <th>LUNCH</th>
                                    <th>DINNER</th>
                                    <th>MIDDLE BREAKFAST</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    {% if mealArray|length > 0%}
                                        {% for meal in mealArray %}

                                            <td>
                                            {% for date in meal.dates%}
                                                {{ date|date("d-m-Y") }} <br>
                                            {% endfor %}
                                            </td>
                                            <td>{{ meal.restaurant }}</td>
                                            <td>{{ meal.breakfast }}</td>
                                            <td>{{ meal.lunch }}</td>
                                            <td>{{ meal.dinner }}</td>
                                            <td>{{ meal.middle }}</td>
                                        {% endfor %}
                                    {% else %}
                                        <td><h2>No results</h2></td>
                                    {% endif %}
                                </tr>
                                </tbody>
                            </table>

                            <h3>Schedule</h3>
                            <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap table-hover" cellspacing="0">
                                <thead>
                                <tr>
                                    <th>DATE</th>
                                    <th>FACILITY</th>
                                    <th>FROM</th>
                                    <th>TO</th>
                                    <th>PARTS</th>
                                </tr>
                                </thead>
                                <tbody>
                                    {% if scheduleArray|length > 0%}
                                        {% for schedule in scheduleArray %}
                                        <tr>
                                            <td>
                                                {% for date in schedule.dates%}
                                                    {{ date|date("d-m-Y") }} <br>
                                                {% endfor %}
                                            </td>
                                            <td>{{ schedule.facility }}</td>
                                            <td>{{ schedule.from }}</td>
                                            <td>{{ schedule.to }}</td>
                                            <td>{{ schedule.parts }}</td>
                                        </tr>
                                        {% endfor %}
                                    {% else %}
                                     <tr><td><h2>No results</h2></td> </tr>
                                    {% endif %}
                                </tbody>
                            </table>

                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /. box -->
            </div>
            <!-- /.col -->

    </div>
</div>


{% endblock %}